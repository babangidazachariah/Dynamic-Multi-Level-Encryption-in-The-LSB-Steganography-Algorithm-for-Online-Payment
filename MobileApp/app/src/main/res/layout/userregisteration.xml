<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.justintime.androidgcm.MainActivity"
    android:fillViewport="true">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:columnCount="4"
        android:rowCount="13"
        android:background="#800080"
        android:orientation="vertical">




        <TextView
            android:id="@+id/introLabel"
            android:text=""
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16pt"
            android:layout_columnSpan="4"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:src="@drawable/logo"
            android:layout_below="@+id/textView2"
            android:layout_row="2"
            android:scaleType="fitXY"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textViewError"
            android:text=""
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="10pt"
            android:textColor="#ff0000"
            android:layout_columnSpan="4"
            android:layout_row="3"
            android:layout_column="0" />


        <EditText
            android:textSize="11pt"
            android:inputType="text"
            android:ems="10"
            android:hint="Username"
            android:id="@+id/editTextRecUsername"
            android:maxLength="20"
            android:background="@drawable/edittextbackground"
            android:layout_columnSpan="4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="0" />

            <EditText
                android:textSize="11pt"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="Password"
                android:id="@+id/editTextRecPassword"
                android:background="@drawable/edittextbackground"
                android:layout_columnSpan="4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_row="5"
                android:layout_column="0" />

        <EditText
            android:inputType="textPassword"
            android:ems="15"
            android:textSize="11pt"
            android:hint="Confirm Password"
            android:id="@+id/editTextRecConfirmPassword"
            android:background="@drawable/edittextbackground"
            android:layout_columnSpan="4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="6"
            android:layout_column="0" />


        <TextView
            android:id="@+id/bodyButtonSep"
            android:text=" "
            android:textSize="10pt"
            android:layout_columnSpan="4"
            android:layout_row="7"
            android:layout_column="0" />


        <Button
            android:textAllCaps="false"
            android:text="Register"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/buttonRecSubmit"
            android:background="@drawable/bordercolor"
            android:layout_columnSpan="2"
            android:textSize="15pt"
            android:layout_gravity="right|fill"
            android:layout_width="137dp"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_height="74dp" />

        <Button
            android:textAllCaps="false"
            android:text="Cancel"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/buttonRecCancel"
            android:textSize="15pt"
            android:background="@drawable/bordercolor"
            android:layout_gravity="left|fill"
            android:layout_row="9"
            android:layout_column="2"
            android:layout_height="wrap_content"
            android:layout_width="171dp"
            android:layout_columnSpan="2" />


        <Button
            android:textAllCaps="false"
            android:text="Login Here"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/buttonRecLogin"
            android:textSize="10pt"
            android:background="@drawable/bordercolor"
            android:layout_gravity="left|fill"
            android:layout_row="11"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:layout_width="171dp"
            android:layout_columnSpan="4" />

    </GridLayout>
</ScrollView>
